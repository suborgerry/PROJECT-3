{%- style -%}
  .section-{{ section.id }}-margin {
    margin-top: {{ section.settings.margin_top_mob }}px;
    margin-bottom: {{ section.settings.margin_bottom_mob }}px;
  }

  .wholesale-form__btn.{{ section.id }} {
    margin-top: {{ section.settings.button_margin_top_mob }}px !important;
    margin-bottom: {{ section.settings.button_margin_bottom_mob }}px !important;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin-top: {{ section.settings.margin_top }}px;
      margin-bottom: {{ section.settings.margin_bottom }}px;
    }

    .wholesale-form__btn.{{ section.id }} {
      margin-top: {{ section.settings.button_margin_top }}px !important;
      margin-bottom: {{ section.settings.button_margin_bottom }}px !important;
    }
  }

  .wholesale-form__checkbox input:checked + label {
    color: #818181
  }

  .wholesale-form-dragndrop .wholesale-form__label {
    margin-bottom: .5rem;
  }

  @media (max-width: 767px) {
    .mt-wtr {
      margin-top: 4rem;
    }
  }

