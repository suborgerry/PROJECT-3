{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top_mob | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom_mob | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="isolate{% unless section.settings.full_width %} page-width{% endunless %}">
  <div class="text-page gradient{% if section.settings.full_width %} text-page--full-width content-container--full-width{% endif %} section-{{ section.id }}-padding">
    <div class="text-page__blocks">
      {%- for block in section.blocks -%}
        {%- case block.type -%}
          {%- when 'heading' -%}
            <p class="text-page__heading heading_{{ forloop.index }}">{{ block.settings.heading | escape }}</p>
            <style>
              .text-page__heading.heading_{{ forloop.index }} {
                margin-top:{{ block.settings.margin_top }}px
              }
              @media screen and (min-width: 750px) {
                margin-top:{{ block.settings.margin_top_mob }}px
              }
            </style>
            {%- when 'text' -%}
            <div class="text-page__text">{{ block.settings.text }}</div>
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Text page",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 52
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "default": "Talk about your brand",
          "label": "Heading"
        },
        {
          "type": "range",
          "id": "margin_top",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Margin top",
          "default": 56
        },
        {
          "type": "range",
          "id": "margin_top_mob",
          "min": 0,
          "max": 100,
          "step": 1,
          "unit": "px",
          "label": "Margin top mobile",
          "default": 48
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Share information about your brand with your customers. Describe a product, make announcements, or welcome customers to your store.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text page",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        }
      ]
    }
  ]
}
{% endschema %}