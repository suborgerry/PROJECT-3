{% style%}
    .list__heading{{ section.id }} {
        margin-bottom:{{ section.settings.margin_heading_bottom_mob }}px
    }

    @media screen and (min-width: 750px) {
        .list__heading{{ section.id }} {
            margin-bottom:{{ section.settings.margin_heading_bottom }}px
        } 
    }
{% endstyle %}

<ul>
    <p class="list__heading{{ section.id }}">{{ section.settings.heading }}</p>
    {%- if section.settings.text -%}
        <p class="list__text">{{ section.settings.text }}</p>
    {%- endif -%}
    {%- for item in section.blocks -%}
        {%- case item.type -%}
            {%- when 'item' -%}
                <li class="c-black">{{ item.settings.text }}</li>
        {%- endcase -%}
    {%- endfor -%}
</ul>
{% schema %}
{
    "name": "List",
    "class": "section page-width list",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading"
        },
        {
            "type": "range",
            "id": "margin_heading_bottom",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin bottom",
            "default": 28
        },
        {
            "type": "range",
            "id": "margin_heading_bottom_mob",
            "min": 0,
            "max": 100,
            "step": 1,
            "unit": "px",
            "label": "Margin bottom mobile",
            "default": 23
        },
        {
            "type": "text",
            "id": "text",
            "label": "Text"
        }
    ],
    "blocks": [
        {
            "type": "item",
            "name": "Item",
            "settings": [
                {
                    "type": "text",
                    "id": "text",
                    "label": "Item text"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "List"
        }
    ]
}
{% endschema %}