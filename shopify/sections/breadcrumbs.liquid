{%- style -%}

  .section-{{ section.id }}-margin {
    margin: {{ section.settings.margin_top_mob }}px 0 {{ section.settings.margin_bottom_mob }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-margin {
      margin: {{ section.settings.margin_top }}px 0 {{ section.settings.margin_bottom }}px;
    }
  }

{%- endstyle -%}

<div class="page-width">
  <nav class="breadcrumbs section-{{ section.id }}-margin" role="navigation" aria-label="breadcrumbs">
    <a href="/" title="Home">Home</a>
    {% if template contains 'page' %}
      <span>{%- if page.title == 'Frequently Asked Questions' -%}FAQ{% else %}{{ page.title }}{%- endif -%}</span>
    {% elsif template contains 'product' %}
    {% if collection.url %}
      {{ collection.title | link_to: collection.url }}
    {% elsif routes.collections_url %}
        <a href="{{ routes.collections_url }}">collections</a>
    {% endif %}
    <span>{{ product.title }}</span>
    {% elsif template contains 'collection' and collection.handle %}
      {% if current_tags %}
        {% capture url %}/collections/{{ collection.handle }}{% endcapture %}
        {{ collection.title | link_to: url }}
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
        <span>{{ collection.title }}</span>
      {% endif %}
    {% elsif template == 'blog' %} 
      {% if current_tags %}
        {{ blog.title | link_to: blog.url }}
        <span>{{ current_tags | join: " + " }}</span>
      {% else %}
        <span>{{ blog.title }}</span>
      {% endif %}
    {% elsif template == 'article' %}
      {{ blog.title | link_to: blog.url }}
      <span>{{ article.title }}</span>
    {% else %}
      <span>{{ page_title }}</span>
    {% endif %}
  </nav>
</div>

{% schema %}
{
  "name": "Breadcrumbs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "margin_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin top",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin bottom",
      "default": 31
    },
    {
      "type": "header",
      "content": "Mobile margin"
    },
    {
      "type": "range",
      "id": "margin_top_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin top mobile",
      "default": 20
    },
    {
      "type": "range",
      "id": "margin_bottom_mob",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Margin bottom mobile",
      "default": 31
    }
  ],
  "presets": [
    {
        "name": "Breadcrumbs"
    }
  ]
}
{% endschema %}