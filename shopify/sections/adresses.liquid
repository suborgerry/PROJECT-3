{%- style -%}
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }

    @media (max-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-bottom: {{ section.settings.padding_bottom_mob }}px;
      }
    }
{%- endstyle -%}

<div class="adresses d-flex section-{{ section.id }}-padding">
  <div class="adresses__first">{{ section.settings.first_adress }}</div>
  <div class="adresses__second">{{ section.settings.second_adress }}</div>
</div>

{% schema %}
{
  "name": "Adresses",
  "tag": "section",
  "class": "section page-width",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 110,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom_mob",
      "min": 0,
      "max": 110,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom mobile",
      "default": 52
    },
    {
      "type": "richtext",
      "id": "first_adress",
      "label": "First adress"
    },
    {
      "type": "richtext",
      "id": "second_adress",
      "label": "Second adress"
    }
  ],
  "presets": [
    {
      "name": "Adresses"
    }
  ]
}
{% endschema %}