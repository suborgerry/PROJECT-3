{%- assign s = section -%}
{%- assign ss = s.settings -%}

{%- style -%}
.positioning--{{ s.id }} {
    padding: {{ ss.padding_section_sm }};
}
@media (min-width: 768px) {
    .positioning--{{ s.id }} {
        padding: {{ ss.padding_section }};
    }
}
{%- endstyle -%}

<section class="columns-with-links positioning--{{ s.id }}">
    <div class="page-width">
        <div class="columns-with-links__main">
            {%- for b in s.blocks -%}
                <div class="columns-with-links__item">
                    <img src="{{ b.settings.image | img_url: 'grande' }}" alt="{{ b.settings.image.alt }}">
                    <h4 class="font-axiforma-bold">{{ b.settings.heading }}</h4>
                    <a href="{{ b.settings.link }}">{{ b.settings.link_name }}</a>
                    <p>{{ b.settings.text }}</p>
                </div>
            {%- endfor -%}
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Columns with links",
    "settings": [          
        {
            "type": "header",
            "content": "t:sections.all.padding.section_padding_heading"
        },
        {
            "type": "text",
            "id": "padding_section",
            "label": "Padding section"
        },
        {
            "type": "text",
            "id": "padding_section_sm",
            "label": "Padding section (mobile)"
        }
    ],
    "blocks": [
        {
            "type": "column-item",
            "name": "Column item",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },            
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading"
                },
                {
                    "type": "text",
                    "id": "link_name",
                    "label": "Link name"
                },
                {
                    "type": "url",
                    "id": "link",
                    "label": "link"
                },
                {
                    "type": "text",
                    "id": "text",
                    "label": "Text"
                }                 
            ]
        }
    ],
    "presets": [
        {
            "name": "Columns with links",
            "category": "new"
        }
    ]
}
{% endschema %}